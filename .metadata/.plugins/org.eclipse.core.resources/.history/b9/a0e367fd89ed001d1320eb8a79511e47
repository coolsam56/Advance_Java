<%! int i,j,k,summ; 
float avg ;
%>
<% i=Integer.ParseInt(request.getParamater("no1"));
   j=Integer.ParseInt(request.getParamater("no2"));
   k=Integer.ParseInt(request.getParamater("no3"));
   summ=i+j+k;
   avg=(float)summ/3;
out.println("<h2> Sum of the Above number is: "+summ +"</h2>");
out.println("<h2> Average of the Above number is: "+avg +"</h2>");
%>

